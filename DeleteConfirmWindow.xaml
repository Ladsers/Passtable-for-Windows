<Window x:Class="Passtable.DeleteConfirmWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:local="clr-namespace:Passtable"
        mc:Ignorable="d"
        Title="Delete item?" SizeToContent="WidthAndHeight" ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        FocusManager.FocusedElement="{Binding ElementName=btnDelete}"
        PreviewKeyDown="DeleteConfirmWindow_OnPreviewKeyDown">
    <StackPanel>
        <TextBlock Text="This is permanent and cannot be undone" FontSize="15" TextAlignment="Center" Margin="10, 10, 10, 20"/>
        <Button x:Name="btnDelete" Content="Delete" Margin="10, 0" Click="btnDelete_OnClick" Height="25"/>
        <Button Content="Cancel" Margin="10, 5, 10, 10" Click="btnCancel_OnClick" Height="25"/>
    </StackPanel>
</Window>
